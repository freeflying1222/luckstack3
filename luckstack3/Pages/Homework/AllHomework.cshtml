@page
@model _17bang.AllHomeworkModel
@{
    ViewData["Title"] = "AllHomework";
}

<h1>AllHomework</h1>



@{
    int wantLine = 10, changeColor = 3;
}



@for (int i = 0; i < 5; i++)
{
    <div style="text-align:center;">
        @for (int j = 0; j < i * 2 - 1; j++)
        {
        string color = i % 2 == 0 ? "red" : "blue";
        <span style="color:@color">i</span>
        }
    </div>
}


@for (int i = 0; i <= wantLine; i++)
{ /*利用循环分支，实现如下图所示的页面效果：*/
    if (i % 2 != 0)
    {
        for (int j = 0; j < wantLine - (i / 2); j++)
        {
            <span>&nbsp;</span>
        }

        if (changeColor % 2 != 0)
        {
            for (int k = 0; k < i; k++)
            {
                <span style="color:blue">i</span>
            }
            ++changeColor;
        }
        else
        {
            for (int k = 0; k < i; k++)
            {
                <span style="color:red">i</span>
            }
            ++changeColor;
        }
        <br />
    }
}




<nav class="container">
    <ul class="offset-5">
        <li><button type="button" class="btn btn-outline-dark">«上月</button></li>
        <li>@DateTime.Now.ToString("yyyy年MM月")</li>
        <li><button type="button" class="btn btn-outline-dark">下月»</button></li>

    </ul>
</nav>
<tbody class="table table-striped">
    <tr colspan="7" class="tdbg">
        @for (int i = 0; i < 7; i++)
        {
            <th>@i</th>
        }
    </tr>
    <tr rowspan="5">
    </tr>
</tbody>


